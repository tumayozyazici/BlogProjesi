@using Blog.REPO.DTO
@model ArticleListDTO
<br />
<br />
<br />
<br />
<br />
<h1><em>@Model.Title</em></h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="card" style="width: 50rem;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item" style="text-indent: 35px; text-align:justify;">@Model.Content</li>
                </ul>
            </div>
        </div>
        <div class="col-4">
            <div class="row border">
                <div class="col-md-4">
                    <img src="@Model.Photo" width="100px" ; height="120px" ; />
                </div>
                <div class="col-md-6" style="text-indent:20px; font-size: 13px" >
                    @Model.AuthorCreatedDate.Date.ToString("dd MMMM yyyy") tarihinden itibaren yazmakta olan @Model.UserName 'ın bu güne kadar @Model.ArticleCount makalesi bulunmaktadır. Yazarın bilgi ve makalelerine göz atmak istersen <a asp-controller="Account" asp-action="AuthorProfile" asp-route-id="@Model.AuthorId">tıkla..</a>
                </div>
            </div>
        </div>
    </div>
</div>

