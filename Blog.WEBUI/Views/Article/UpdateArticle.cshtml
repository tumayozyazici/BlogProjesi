@using Blog.WEBUI.Models.VMs
@model ArticleUpdateVM;

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateArticle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" style="height: 200px; resize:none"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReadingTime" class="control-label"></label>
                <input asp-for="ReadingTime" class="form-control" />
                <span asp-validation-for="ReadingTime" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                @Html.DropDownList("TopicId", ViewBag.Topics as SelectList, "Seçiniz", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.ArticleId" />
                <input type="submit" value="Güncelle" class="btn btn-warning mt-2" />
            </div>
            <div class="form-group">
                <a asp-action="DeleteArticle" asp-controller="Article" asp-route-id="@Model.ArticleId" type="submit" class="btn btn-danger mt-2">Sil</a>
            </div>
        </form>
        
    </div>
</div>