@model Blog.WEBUI.Models.VMs.ArticleCreateVM


@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateArticle">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" style="height: 200px; resize:none"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReadingTime" class="control-label"></label>
                    <input asp-for="ReadingTime" class="form-control" />
                    <span asp-validation-for="ReadingTime" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    @Html.DropDownList("TopicId", ViewBag.Topics as SelectList, "Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Oluştur" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    <br />
    <br />
    <br />
    <br />
    <div class="container text-center">
        <h1>Sen yazmak istiyor? geç buyur..</h1><a asp-controller="Account" asp-action="Login" class="btn btn-lg btn-warning">Tıkla...</a>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
